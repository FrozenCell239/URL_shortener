{% extends 'base.html.jinja' %}
{% block main %}
<h1>Vos informations</h1>
<form action="#" method="post" class="form" id="profile-form">
    <label for="username">Nom d'utilisateur</label>
    <input type="text" name="username" value="{{ user_infos.username }}">
    <label for="mail">Adresse mail</label>
    <input type="email" name="mail" value="{{ user_infos.mail }}">
    <p>
        <a href="{{ url_for('main.index') }}">Annuler</a>
        <span id="buttons-separator">&nbsp;|&nbsp;</span>
        <button type="submit">Modifier</button>
    </p>
    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
</form>
